<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.plusend.diycode.view.activity.SignInActivity"
    >
  <include
      layout="@layout/toolbar"
      />
  <RelativeLayout
      android:id="@+id/activity_sign_in"
      android:layout_width="match_parent"
      android:layout_height="360dp"
      android:layout_below="@id/toolbar"
      >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="140dp"
        android:layout_height="69dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/logo"
        />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/name_til"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        >
      <EditText
          android:id="@+id/name"
          android:layout_width="match_parent"
          android:layout_height="36dp"
          android:background="@null"
          android:hint="Email / 用户名"
          android:inputType="textEmailAddress|text"
          android:textSize="16sp"
          />

      <View
          android:id="@+id/imageView"
          android:layout_width="match_parent"
          android:layout_height="2dp"
          android:layout_below="@id/name"
          android:layout_marginTop="4dp"
          android:background="@drawable/sign_divider"
          />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/password_til"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_til"
        android:layout_centerHorizontal="true"
        >

      <EditText
          android:id="@+id/password"
          android:layout_width="match_parent"
          android:layout_height="36dp"
          android:layout_marginEnd="24dp"
          android:background="@null"
          android:hint="密码"
          android:inputType="textPassword"
          android:textSize="16sp"
          />
      <View
          android:layout_width="313dp"
          android:layout_height="2dp"
          android:layout_below="@id/password"
          android:layout_marginTop="4dp"
          android:background="@drawable/sign_divider"
          />
    </android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/sign_in"
        android:layout_width="312dp"
        android:layout_height="44dp"
        android:layout_below="@id/password_til"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/sign"
        android:text="登  录"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:textStyle="bold"
        />
  </RelativeLayout>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      >
    <ImageView
        android:id="@+id/sign_github"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="90dp"
        android:src="@mipmap/sign_github"
        />
    <ImageView
        android:id="@+id/sign_weibo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="210dp"
        android:src="@mipmap/sign_weibo"
        />
    <TextView
        android:id="@+id/sign_up"
        android:layout_width="75dp"
        android:layout_height="23dp"
        android:layout_below="@id/sign_github"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="25dp"
        android:text="新用户注册"
        android:textColor="#4d4d4d"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/forget_password"
        android:layout_width="60dp"
        android:layout_height="23dp"
        android:layout_below="@id/sign_github"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="201dp"
        android:layout_marginTop="25dp"
        android:text="忘记密码"
        android:textColor="#4d4d4d"
        android:textSize="15sp"
        />
  </RelativeLayout>
</RelativeLayout>
