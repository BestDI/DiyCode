      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/content"
      android:paddingBottom="11dp"
      android:paddingTop="8dp"
      android:textColor="#999999"
      android:textSize="12sp"
      />
</RelativeLayout>
